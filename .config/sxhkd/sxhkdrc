# bspwm

# close/kill focused window
super + {_,shift + }w
	bspc node -{c,k}

# set focused window state
# s > floating 		"Is above any tiled window and can be moved/resized freely."
# f > fullscreen	"Fills its monitor rectangle, is above all the other windows and has no borders."
# y > pseudo_tiled "Has an unrestricted size while being centered in its tiling space."
super + {s,f,y}
	bspc node -t {~floating,~fullscreen,~pseudo_tiled}

# set focused node flags
# e > sticky		"Stays in the focused desktop of its monitor."
# r > locked		"Ignores the close message."
super + {e,r,p}
	bspc node -g {sticky,locked}

# move window to the biggest place in the desktop
super + m
	bspc node -s biggest

# switch desktop to the last used
super + Tab
	bspc desktop -f last

# toggle desktop layout (monocle/tiled)
super + t
	bspc desktop -l next

# move window to desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# pointer - focus windows automatically
~button1
	bspc pointer -g focus

# pointer - moving, resizing. 
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}
super + !button{1-3}
	bspc pointer -t %i %i
super + @button{1-3}
	bspc pointer -u

# simple presel bindings for noobs that can't handle hjkl
super + Up
	bspc node --presel-dir ~north
super + Left
	bspc node --presel-dir ~west
super + Right
	bspc node --presel-dir ~east
super + Down
	bspc node --presel-dir ~south

# media TODO: XF86AudioMute XF86AudioPlay XF86AudioNext XF86AudioPrev
XF86AudioRaiseVolume
	$SCRIPTS/kikoeru -i 5

XF86AudioLowerVolume
	$SCRIPTS/kikoeru -d 5

# toggle keyboard layout (fn + y)
XF86Calculator
	$SCRIPTS/gengo

# printscreen script
Print
	maim

# terminal
super + Return
	termite

# firefox
super + o
	firefox

# rofi - run
super + space
	rofi -show run -lines 3 -eh 2 -width 100 -padding 420 -opacity "90" -bw 0  -font "M+ 1m 18"

# sxhkd/bspwm/panel/termite reload
super + Escape
	$SCRIPTS/regen-theme; \
	pkill -USR1 -x sxhkd; \
	pkill -x panel; \
	$XDG_CONFIG_HOME/bspwm/bspwmrc; \
	pkill -USR1 -x compton; \
	pkill -USR1 -x termite

# logout
super + alt + Escape
	pkill -x panel; bspc quit
